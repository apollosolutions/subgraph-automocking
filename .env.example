# Server Configuration
PORT=3000
NODE_ENV=development

# Apollo Router Configuration
SUBGRAPH_PROXY_HOST=http://localhost:${PORT}
SUBGRAPH_PROXY_ENABLED=true

# Apollo Platform Configuration
APOLLO_KEY=your-apollo-api-key-here
APOLLO_GRAPH_ID=your-graph-id-here
APOLLO_GRAPH_VARIANT=current

# Apollo Platform API
APOLLO_PLATFORM_API_URL=https://graphql.api.apollographql.com/api/graphql

# Logging Configuration
LOG_LEVEL=info
LOG_PRETTY_PRINT=true

# Cache Configuration
SCHEMA_CACHE_TTL=3600
SCHEMA_CACHE_MAX_SIZE=100

# Proxy Configuration
ENABLE_PASSTHROUGH=true

# Subgraph details
SUBGRAPH_CHECK_INTERVAL_MS=30000
SUBGRAPH_HEALTH_TIMEOUT_MS=5000
