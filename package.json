{
  "author": "Sam Friedman",
  "dependencies": {
    "@apollo/client": "^4.0.9",
    "@apollo/subgraph": "^2.12.1",
    "@graphql-tools/mock": "^9.1.3",
    "@graphql-tools/schema": "^10.0.29",
    "axios": "^1.13.2",
    "cross-fetch": "^4.1.0",
    "express": "^5.1.0",
    "graphql": "^16.12.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "zod": "^4.1.13"
  },
  "description": "GraphQL mocking proxy for Apollo Router in development environments",
  "engines": {
    "node": ">=23.1.0",
    "npm": "please-use-yarn",
    "yarn": ">=4.12.0"
  },
  "license": "ISC",
  "main": "dist/index.js",
  "name": "apollo-mocking-proxy",
  "packageManager": "yarn@4.12.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "clean": "rm -rf dist coverage",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts ",
    "lint:fix": "eslint src --ext .ts --fix",
    "router:dev": "cd router && ./run-with-proxy.sh",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run src/__tests__/integration",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "types": "dist/index.d.ts",
  "version": "1.0.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typed-document-node": "^6.1.3",
    "@graphql-codegen/typescript": "^5.0.5",
    "@graphql-codegen/typescript-operations": "^5.0.5",
    "@types/express": "^5.0.5",
    "@types/html-escaper": "^3",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "eslint": "^9.39.1",
    "globals": "^17.0.0",
    "html-escaper": "^3.0.3",
    "no-case": "^4.0.0",
    "pascal-case": "^4.0.0",
    "pino-pretty": "^13.1.2",
    "rxjs": "^7.8.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
